generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PersonalInfo {
  id              String          @id           @default(uuid())
  
}

model Credentials {
  id              String          @id           @default(uuid())
  memberId        Int             @unique       @default(autoincrement())
  name            String 
  email           String
  phone           Int
  password        String
  role            Role
  updatedAt       DateTime        @updatedAt
}

enum Role {
  MEMBER
  USER
  ADMIN
}


